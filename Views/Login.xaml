<Page x:Class="Libarary_Cataloge_Program.Views.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Libarary_Cataloge_Program.Views"
      mc:Ignorable="d"
      Title="Login">

    <Grid>
        <StackPanel Grid.Column="1">
            <Label FontSize="36" FontFamily="Times New Roman" 
           FontWeight="DemiBold" Foreground="#2F4F4F"
           HorizontalAlignment="Center" Margin="0,10" VerticalAlignment="Center">
                Login Page
            </Label>

            <!-- Input Labels -->
            <Grid Margin="0,20,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Label Content="UserName" Grid.Column="0"
               FontSize="20" FontFamily="Times New Roman" Foreground="#2F4F4F"
               HorizontalAlignment="Center" />

                <Label Content="Password" Grid.Column="1"
               FontSize="20" FontFamily="Times New Roman" Foreground="#2F4F4F"
               HorizontalAlignment="Center" />
            </Grid>

            <!-- Input TextBoxes -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <TextBox Text="{Binding Username }" Grid.Column="0"
                 FontSize="16" Margin="10"
                 BorderBrush="#A0522D" BorderThickness="1"
                 Background="#FFF8F0" Foreground="Black" MinWidth="50" />

                <TextBox Text="{Binding Password}" Grid.Column="1"
                 FontSize="16" Margin="10"
                 BorderBrush="#A0522D" BorderThickness="1"
                 Background="#FFF8F0" Foreground="Black" MinWidth="50" />
            </Grid>

            <!-- BUTTONS -->

            <StackPanel Orientation="Horizontal">
                <Button Content="Login" MinWidth="100" MinHeight="50" Background="#FFF8F0" BorderBrush="#2F4F4F" FontFamily="Times New Roman" 
                        Margin="290,15,10,15" Command="{Binding LogIn}"/>
                <Button Content="SignUp" MinWidth="100" MinHeight="50" Background="#FFF8F0" 
                        BorderBrush="#2F4F4F" FontFamily="Times New Roman" Command="{Binding SignUp}"/>
            </StackPanel>

        </StackPanel>
    </Grid>

</Page>
