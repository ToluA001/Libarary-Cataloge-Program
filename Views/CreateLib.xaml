<Page x:Class="Libarary_Cataloge_Program.Views.CreateLib"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Libarary_Cataloge_Program.Views"
      mc:Ignorable="d"
      Title="CreateLib">
      <StackPanel Orientation="Vertical">
          <TextBox Text="{Binding LibName}"
                   FontSize="16" Margin="10"
                   BorderBrush="#A0522D" BorderThickness="1"
                   Background="#FFF8F0" Foreground="Black" MinWidth="50" />
          <Button Content="Create Lib" MinWidth="100" MinHeight="50" Background="#FFF8F0" 
                  BorderBrush="#2F4F4F" FontFamily="Times New Roman" Command="{Binding SignUp}"/>
          
      </StackPanel>
</Page>
